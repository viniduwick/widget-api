{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["src/libs/*"],
      "@modules/*": ["src/modules/*"],
      "@services/*": ["src/services/*"]
    },
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    ".esbuild/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
